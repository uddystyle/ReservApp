<%= render 'partial/navbar' %>

<script type="text/javascript" charset="utf-8">
    $(function () {
        <% if !(@user.email.blank?) %>
        $("#ver-email").attr('class', 'vertification-checked');
        <% end %>

        <% if !(@user.phone_number.blank?) %>
        $("#ver-tel").attr('class', 'vertification-checked');
        <% end %>

        <% if @user.provider == 'facebook' %>
        $("#ver-facebook").attr('class', 'vertification-checked');
        <% end %>
    });
</script>

<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-4">
      <div class="user-profile row-space-4 text-center">
        <%= image_tag @user.image, class: 'profile-full img-circle' %>
      </div>
      <div class="panel-default verifications hidden-xs hidden-sm">
        <div class="panel-heading">
          認証済みID
        </div>
        <div class="panel-body">
          <div id="ver-email">
            メールアドレス
          </div>
          <br>
          <div id="er-tel">
            電話番号
          </div>
          <br>
          <div id="ver-facebook">
            Facebook
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-9 col-md-8 col-sm-12">
      <h1>こんにちは <%= @user.name %> です。</h1>
    </div>
    <p>自己紹介</p>
    <%= @user.description %>
  </div>
</div>